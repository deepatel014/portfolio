<%- include('../partials/header') %>
<%- include('../partials/login_nav') %>

<!-- Content for the add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Contact</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the Contact Name"
                    name="name" required>
                </div>

                <div class="form-group">
                    <label for="nameTextField">Phone</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the Contact name"
                    name="phone" required>
                </div>

                <div class="form-group">
                    <label for="emailTextField">Email</label>
                    <input type="text" class="form-control"
                    id="emailTextField"
                    placeholder="Enter the Email"
                    name="email" required>
                </div>

                

                <button class="btn btn-dark" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/business" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>


<%- include('../partials/footer') %>